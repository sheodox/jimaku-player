{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es2020",
		"esModuleInterop": true,
		"target": "es2020",
		"noImplicitAny": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"outDir": "build"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
